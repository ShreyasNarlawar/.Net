@model _07ModelView.Models.Product;

<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<h1 class="text-info">Product Details</h1>
<div class="card" style="width:18rem;">
    <img src="~/images/goldbiscuit.png" class="card-img-top" alt="goldbiscuit"/>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Price :@Model.Price</p>
        <p class="card-text">Details of Product - Gold Bar</p>
        <a href="#" class"btn btn-primary">Add to Cart</a>
    </div>
</div>
<script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>

