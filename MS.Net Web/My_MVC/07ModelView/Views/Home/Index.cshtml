@model _07ModelView.Models.ProductViewModel;

<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<p class="text-bg-info">Index </p>
<div class="card-text" style="width:18rem;">
    <img src="~/images/goldbiscuit.png" class="card-img-top" alt="goldbiscuit" />
    <div class="card-body">
        <h5 class="card-title">@Model.Product.Id</h5>
        <p class="card-text">@Model.Message</p>
        @if(Model.isInStock)
        {
            <p class="card-text">In Stock.</p>
        }
        else
        {
            <p class="card-text">Out of Stock.</p>
        }
        <a href="/Home/ProductDetails/@Model.Product.Id" class="btn btn-primary">Product Details</a>
    </div>
</div>
<script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>

